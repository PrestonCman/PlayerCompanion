<Page class="page"
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="TOC">
        <Label class="action-bar-title" text="{{tab}}"></Label>
    </ActionBar>

<TabView loaded="onLoaded" selectedIndex="{{tabSelectedIndex}}" androidTabsPosition="bottom">
    <TabViewItem class="charTab" title="Inv" text="Inventory">
        <StackLayout class="TOC">
                <Label class="directory" text="Inventory" textWrap="true"/>
                <Button class="directory" text="Add Character" tap="openModal" textWrap="true" />
        </StackLayout>
    </TabViewItem><TabViewItem class="charTab" title="Misc" text="Character Information">
        <StackLayout class="TOC">
                <Label class="directory" text="Character Information" textWrap="true"/>
                <Button class="directory" text="Add Character" tap="openModal" textWrap="true" />
        </StackLayout>
    </TabViewItem><TabViewItem class="charTab" title="Main" text="Character">
        <StackLayout class="TOC">
                <Label class="directory" text="Character" textWrap="true"/>
                <Button class="directory" text="Add Character" tap="openModal" textWrap="true" />
        </StackLayout>
    </TabViewItem><TabViewItem class="charTab" title="Com" text="Combat">
        <StackLayout class="TOC">
                <Label class="directory" text="Combat" textWrap="true"/>
                <Button class="directory" text="Add Character" tap="openModal" textWrap="true" />
        </StackLayout>
    </TabViewItem><TabViewItem class="charTab" title="Spell" text="Spells">
        <StackLayout class="TOC">
                <Label class="directory" text="Spells" textWrap="true"/>
                <Button class="directory" text="Add Character" tap="openModal" textWrap="true" />
        </StackLayout>
    </TabViewItem>
</TabView>
</Page>